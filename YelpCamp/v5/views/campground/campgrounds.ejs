<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1>Campgrounds</h1>        
            <p>View our hand-picked campgrounds from all over the world</p>
            <a class="btn btn-info btn-large" href="/campgrounds/new">Add New Campground</a>    
        </div>
        
    </div>
    <div class="container">
        <div class="row" style="display:flex; flex-wrap:wrap">
            <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6 text-center" >
                <div class="thumbnail">
                    <img src=" <%= campground.image %> " />
                    <div class="caption">
                        <h3> <%= campground.title %> </h3>
                        <a class="btn btn-primary btn-default" href="/campgrounds/<%= campground._id %>" target="_blank" > Read More </a>
                    </div>
                </div>
                
            </div>
            <% }); %>
        </div>
        
    </div>
</div>




<% include ../partials/footer %>